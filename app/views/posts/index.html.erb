<header>
  <h1>Listing posts</h1>
  <%= link_to 'New Post', new_post_path %>
</header>

<section>
<% @posts.each do |post| %>
  <article>
    <h2><%= post.title %></h2>
    <p class="author"><%= post.name %></p>
    
    <p class="post"><%= post.content %></p>
    <nav>
      <%= link_to 'Show', post %> |
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </nav>
  </article>
<% end %>

</section>
<footer></footer>